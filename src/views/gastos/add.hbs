<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/gastos/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="tienda" placeholder="Tienda" autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="number" name="cantidad" class="form-control"  placeholder="Cantidad" required>
                        </div>
                        <div class="form-group">
                           <div class="input-group date">
                                <input type="date" name="fecha" class="form-control" value="12-02-2012">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                    <i class="fas fa-calendar-alt"></i></span>
                                 </div>   
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control"  placeholder="Description"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Registrar Gasto</button>
                           
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>